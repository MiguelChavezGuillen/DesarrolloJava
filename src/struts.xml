<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <!--<constant name="struts.action.extension" value="html"/>-->
    <constant name="struts.devMode" value="true" />
    <package name="default" namespace="/" extends="struts-default">
        <default-action-ref name="index"></default-action-ref>
        <action name="index" class="pe.com.prueba.action.IndexAction">
            <result type="dispatcher" name="success">u_index.jsp</result>
        </action>
        <action name="instrumentos" class="pe.com.prueba.action.IndexAction">
            <result name="success">instrumentos.jsp</result>
        </action>
        <action name="registro">
            <result>u_UserRegister.jsp</result>
        </action>
        <action name="login" class="pe.com.prueba.action.LoginAction">
            <result name="success">u_Login.jsp</result>
            <result name="error">all_error.jsp</result>
            <result name="login" type="redirectAction">home</result>
        </action>
        <action name="eventos" class="pe.com.prueba.action.EventAction">
            <result name="success">u_Events.jsp</result>
        </action>
        <action name="home">
            <result>r_Home.jsp</result>
        </action>
<!--         <action name="*Login" 
                class="pe.com.prueba.action.LoginAction"
                method="{1}">
            <result name="success">showOrderStatus.jsp</result>
            <result name="error">a_error.jsp</result>
        </action>-->
    </package>
    <package name="administrator" namespace="/administrator" extends="struts-default">
        <action name="*Login" class="pe.com.prueba.action.LoginAdministratorAction" method="{1}">
            <result name="success">ad_login.jsp</result>
            <result name="login" type="redirectAction">showAdministrator</result>
            <result name="error" >all_error.jsp</result>
        </action>
        <action name="*Administrator"
                class="pe.com.prueba.action.AdministratorAction"
                method="{1}">
            <result name="success" type="redirectAction">home</result>
            <result name="error">all_error.jsp</result>
        </action>
        <action name="home" class="pe.com.prueba.action.AdministratorAction" method="show">
            <result name="success">ad_home.jsp</result>
            <result name="error">all_error.jsp</result>
        </action>
    </package>
</struts>