<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <!--<constant name="struts.action.extension" value="html"/>-->
    <constant name="struts.devMode" value="true" />
    <package name="default" namespace="/" extends="struts-default">

        <interceptors>
            <interceptor name="authentication" class="pe.com.prueba.action.AuthenticationInterceptor"></interceptor>
            <interceptor-stack name="authStack">
                <interceptor-ref name="authentication"></interceptor-ref>
                <interceptor-ref name="defaultStack"></interceptor-ref>
            </interceptor-stack>
        </interceptors>



        <global-results>
            <result name="LOGIN" type="redirectAction">login</result>
            <result name="HOME" type="redirectAction">home</result>
        </global-results>





        <action name="index" class="pe.com.prueba.action.IndexAction">

            <result type="dispatcher" name="success">u_index.jsp</result>
        </action>

        <action name="instrumentos" class="pe.com.prueba.action.IndexAction">
            <interceptor-ref name="authStack"></interceptor-ref>
            <result name="success">instrumentos.jsp</result>
        </action>
        <action name="registro">
            <interceptor-ref name="authStack"></interceptor-ref>
            <result>u_UserRegister.jsp</result>
        </action>

        <action name="eventos" class="pe.com.prueba.action.EventAction">
            <interceptor-ref name="authStack"></interceptor-ref>
            <result name="success">u_Events.jsp</result>
        </action>

        <action name="welcome" method="execute" class="pe.com.prueba.action.WelcomeAction">
            <interceptor-ref name="authStack"></interceptor-ref>
            <result name="SUCCESS">welcome.jsp</result>
        </action>


        <action name="home" method="execute" class="pe.com.prueba.action.HomeAction">
            <interceptor-ref name="authStack"></interceptor-ref>
            <result name="SUCCESS">inicio.jsp</result>
            <result name="ERROR">error.jsp</result>
        </action>

        <action name="login" method="execute" class="pe.com.prueba.action.LoginAction">
            <interceptor-ref name="authStack"></interceptor-ref>
            <result name="REDIRECT" type="redirect">${url}</result>
            <result name="SUCCESS" type="redirectAction">home</result>
            <result name="INPUT">login.jsp</result>
            <result name="ERROR">error.jsp</result>
        </action>

        <action name="register" method="execute" class="pe.com.prueba.action.RegisterAction">
            <interceptor-ref name="authStack"></interceptor-ref>
            <result name="SUCCESS" type="redirectAction">login</result>
            <result name="INPUT">registro.jsp</result>
            <result name="ERROR">error.jsp</result>
        </action>

        <action name="logout" method="logout" class="pe.com.prueba.action.LoginAction">
            <interceptor-ref name="authStack"></interceptor-ref>
            <result name="SUCCESS" type="redirectAction">index</result>
        </action>

        <action name="add" method="add" class="pe.com.prueba.action.CRUDAction">
            <interceptor-ref name="authStack"></interceptor-ref>
            <result name="INPUT">CRUD.jsp</result>
            <result name="SUCCESS" type="redirectAction">home</result>
            <result name="ERROR">error.jsp</result>
        </action>

        <action name="edit" method="edit" class="pe.com.prueba.action.CRUDAction">
            <interceptor-ref name="authStack"></interceptor-ref>
            <result name="INPUT">CRUD.jsp</result>
            <result name="SUCCESS" type="redirectAction">home</result>
            <result name="ERROR">error.jsp</result>
        </action>

        <action name="delete" method="delete" class="pe.com.prueba.action.CRUDAction">
            <interceptor-ref name="authStack"></interceptor-ref>
            <result name="INPUT">CRUD.jsp</result>
            <result name="SUCCESS" type="redirectAction">home</result>
            <result name="ERROR">error.jsp</result>
        </action>

        <action name="video" method="execute" class="pe.com.prueba.action.VideoAction">

            <result name="SUCCESS">video.jsp</result>
            <result name="ERROR">error.jsp</result>
        </action>

    </package>
</struts>